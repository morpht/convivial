{% set classes = [
  'paragraph-layout',
  'paragraph-layout--12',
] %}

{% set preview_layout %}
  <div{{ attributes.addClass(classes) }}>
    <div{{ region_attributes.region1.addClass('paragraph-layout__region', 'paragraph-layout__region--first') }}>
      {{ content.region1 }}
    </div>
  </div>
{% endset %}

{% set render_layout %}
  {% if content %}
    <div{{ attributes.addClass(classes) }}>
      {% if content.region1 %}
        <div{{ region_attributes.region1.addClass('paragraph-layout__region', 'paragraph-layout__region--first') }}>
          {{ content.region1 }}
        </div>
      {% endif %}
    </div>
  {% endif %}
{% endset %}

{% if in_preview %}
  {{ preview_layout }}
{% else %}
  {{ render_layout }}
{% endif %}
