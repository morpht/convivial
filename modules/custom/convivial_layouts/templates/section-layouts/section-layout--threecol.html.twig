{#
/**
 * @file
 * Default theme implementation for a three-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 */
#}
{% set classes = [
  'layout',
  'layout--threecol-section',
] %}

{% set preview_layout %}
  <div{{ attributes.addClass(classes) }}>
    <div class="layout__region-container">
      <div class="layout__region-row">
        <div{{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>
          {{ content.first }}
        </div>
        <div{{ region_attributes.second.addClass('layout__region', 'layout__region--second') }}>
          {{ content.second }}
        </div>
        <div{{ region_attributes.third.addClass('layout__region', 'layout__region--third') }}>
          {{ content.third }}
        </div>
      </div>
    </div>
  </div>
{% endset %}

{% set render_layout %}
  {% if content|render %}
    <div{{ attributes.addClass(classes) }}>
      <div class="layout__region-container">
        <div class="layout__region-row">
          {% if content.first|render %}
            <div{{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>
              {{ content.first|render }}
            </div>
          {% endif %}
          {% if content.second|render %}
            <div{{ region_attributes.second.addClass('layout__region', 'layout__region--second') }}>
              {{ content.second|render }}
            </div>
          {% endif %}
          {% if content.third|render %}
            <div{{ region_attributes.third.addClass('layout__region', 'layout__region--third') }}>
              {{ content.third|render }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
{% endset %}

{% if in_preview %}
  {{ preview_layout }}
{% else %}
  {{ render_layout }}
{% endif %}
